<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
        >
            <Button
                    android:id="@+id/btnSetUsb"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="打印机设置"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp2"
            />
            <Button
                    android:id="@+id/btnOpenCashBox"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="打开钱箱"
                    app:layout_constraintLeft_toRightOf="@id/btnSetUsb"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp2"
            />
            <Button
                    android:id="@+id/btnPrintTest"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="打印测试页"
                    app:layout_constraintLeft_toRightOf="@id/btnOpenCashBox"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp2"
            />
            <Button
                    android:id="@+id/btnLabelCommand"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="LabelCommand"
                    app:layout_constraintLeft_toRightOf="@id/btnPrintTest"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAllCaps="false"
                    android:layout_marginLeft="@dimen/dp2"
            />
            <Button
                    android:id="@+id/btnEscPrintReceipt"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="打印收据Esc"
                    app:layout_constraintLeft_toRightOf="@id/btnLabelCommand"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp2"
            />
            <Button
                    android:id="@+id/btnPrintEscBill"
                    android:layout_width="@dimen/dp211"
                    android:minHeight="@dimen/dp120"
                    android:layout_height="wrap_content"
                    android:text="打印Esc账单"
                    app:layout_constraintLeft_toRightOf="@id/btnEscPrintReceipt"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="@dimen/dp2"
            />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>