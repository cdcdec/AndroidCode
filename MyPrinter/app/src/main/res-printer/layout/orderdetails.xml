<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:paddingBottom="10.0dip" style="@style/grey_background"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:text="@string/od_ordertitle" style="@style/textview_above_round_corner_linearLayout" />
            <LinearLayout style="@style/common_round_corner_linearLayout">
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:id="@id/o_itemIDLabel" android:text="@string/o_orderIDTxt_1" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_itemIDValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/o_createTimeTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_createTimeValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout android:id="@id/od_focus" style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/o_orderTypeTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_bizTypeValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/o_productTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_productValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/od_priceTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_priceValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/o_amountTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_qtyValue" style="@style/common_textview_black_style" />
                    <TextView android:id="@id/od_unitTxw" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/o_receivableTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_amountValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout android:id="@id/od_receivedLayout" android:visibility="gone" style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:id="@id/od_receivedTxt" android:text="@string/o_receivableTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_receivedValue" style="@style/common_textview_black_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                    <TextView android:text="@string/wh_nameTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                    <TextView android:id="@id/od_warehouseValue" style="@style/common_textview_black_style" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:text="@string/od_bpartnertitle" style="@style/textview_above_round_corner_linearLayout" />
            <LinearLayout style="@style/dark_linearLayout_u">
                <TextView android:text="@string/s_bpartnerNameLabel" style="@style/edittext_label_style" />
                <TextView android:id="@id/od_bpartnerValue" style="@style/notEditable_edittext_style" />
            </LinearLayout>
            <LinearLayout style="@style/linearLayout_rounded_rectangle_m">
                <LinearLayout style="@style/linearLayout_before_pencil">
                    <TextView android:text="@string/s_contactLabel" style="@style/edittext_label_style" />
                    <EditText android:id="@id/od_contactValue" style="@style/editable_edittext_style" />
                </LinearLayout>
                <ImageView style="@style/pencil_style" />
            </LinearLayout>
            <LinearLayout style="@style/linearLayout_rounded_rectangle_m">
                <LinearLayout style="@style/linearLayout_before_pencil">
                    <TextView android:text="@string/s_contactMobileLabel" style="@style/edittext_label_style" />
                    <EditText android:id="@id/od_contactMobileValue" android:inputType="phone" style="@style/editable_edittext_style" />
                </LinearLayout>
                <ImageView style="@style/pencil_style" />
            </LinearLayout>
            <LinearLayout style="@style/linearLayout_rounded_rectangle_d">
                <LinearLayout style="@style/linearLayout_before_pencil">
                    <TextView android:text="@string/o_commentsTxt_1" style="@style/edittext_label_style" />
                    <EditText android:id="@id/od_commentsValue" android:singleLine="false" style="@style/editable_edittext_style" />
                </LinearLayout>
                <ImageView style="@style/pencil_style" />
            </LinearLayout>
            <Button android:id="@id/od_deleteButton" android:text="@string/pt_deleteButtonTxt" style="@style/bottom_grey_button_style" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>