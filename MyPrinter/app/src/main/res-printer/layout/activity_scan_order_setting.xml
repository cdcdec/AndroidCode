<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/setting_bg_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/left"
            android:paddingTop="8.0dip"
            android:layout_width="250.0dip"
            android:layout_height="fill_parent">

        <LinearLayout
                android:id="@id/function_introduction"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:id="@id/ivGroupImage"
                    android:src="@drawable/function_introduction"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:id="@id/tvGroupName"
                    android:layout_width="wrap_content"
                    android:text="@string/pos_function_introduction"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>

        <View
                android:background="@color/pos_line_grey"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"/>

        <LinearLayout
                android:id="@id/qrcode_setting"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:id="@id/ivGroupImage"
                    android:src="@drawable/icon_table_setting"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:id="@id/tvGroupName"
                    android:layout_width="wrap_content"
                    android:text="@string/pos_table_qrcode_setting"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/product_manage"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:src="@drawable/icon_product_manage"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/product_manage"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/menu_style"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:src="@drawable/icon_menu_style"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/menu_style"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>

        <View
                android:background="@color/pos_line_grey"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"/>

        <LinearLayout
                android:id="@id/pay_and_sales"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:src="@drawable/icon_pay_and_fee"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/pos_pay_and_fee"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>

        <LinearLayout
                android:id="@id/more_setting"
                style="@style/main_setting_left_ll1">

            <ImageView
                    android:src="@drawable/icon_function_setting"
                    style="@style/main_setting_left_imageview"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/pos_more_setting"
                    style="@style/main_setting_left_tv2"/>
        </LinearLayout>
    </LinearLayout>

    <View
            android:id="@id/line"
            android:background="@color/setting_line_color"
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/left"/>

    <FrameLayout
            android:id="@id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/line"/>
</RelativeLayout>