<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:id="@id/layout_weshop_enabled"
            android:layout_width="704.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip">

        <LinearLayout
                android:paddingLeft="24.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="56.0dip">

            <TextView
                    android:layout_width="0.0dip"
                    android:text="@string/pos_wechat_set_shop_name"
                    android:layout_weight="1.0"
                    style="@style/textview_weiorder_settting"/>

            <EditText
                    android:id="@id/et_shop_name"
                    android:maxLength="200"
                    style="@style/editable_weiorder_settting"/>
        </LinearLayout>

        <LinearLayout
                android:paddingLeft="24.0dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip">

            <TextView
                    android:text="@string/pos_wechat_set_shop_phone"
                    android:layout_weight="1.0"
                    style="@style/textview_weiorder_settting"/>

            <EditText
                    android:id="@id/et_shop_contact"
                    android:maxLength="50"
                    android:inputType="phone"
                    style="@style/editable_weiorder_settting"/>
        </LinearLayout>

        <LinearLayout
                android:paddingLeft="24.0dip"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip">

            <TextView
                    android:text="@string/pos_wechat_set_shop_add"
                    android:layout_weight="1.0"
                    style="@style/textview_weiorder_settting"/>

            <EditText
                    android:id="@id/et_shop_address"
                    android:maxLength="200"
                    style="@style/editable_weiorder_settting"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>