<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:padding="24.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true">

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/layout_include"
                android:background="@drawable/shape_rounded_rectangle"
                android:padding="1.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="12.0dip"
                android:layout_weight="1.0">

            <TextView
                    android:textSize="20.0dip"
                    android:textColor="@color/taste_text_color_gray"
                    android:gravity="center"
                    android:id="@id/tv_label_include"
                    android:background="@drawable/selector_red_lightgray"
                    android:duplicateParentState="true"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:text="属性也打折"/>

            <ImageView
                    android:id="@id/iv_include"
                    android:duplicateParentState="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:src="@drawable/selector_attribute_price_rule_included"
                    android:layout_weight="1.0"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/layout_exclude"
                android:background="@drawable/shape_rounded_rectangle"
                android:padding="1.0dip"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12.0dip"
                android:layout_weight="1.0">

            <TextView
                    android:textSize="20.0dip"
                    android:textColor="@color/taste_text_color_gray"
                    android:gravity="center"
                    android:id="@id/tv_label_exclude"
                    android:background="@drawable/selector_red_lightgray"
                    android:duplicateParentState="true"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:text="属性不打折"/>

            <ImageView
                    android:id="@id/iv_exclude"
                    android:duplicateParentState="true"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:src="@drawable/selector_attribute_price_rule_excluded"
                    android:layout_weight="1.0"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>