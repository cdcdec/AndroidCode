<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/pos_big_b_color_10800"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@id/layout_container"
            android:layout_width="600.0dip"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="20.0dip"
                android:textColor="@color/pos_text_gray_black"
                android:gravity="center_vertical"
                android:id="@id/tv_receipt_label"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/layout_receipt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:textSize="20.0dip"
                android:textColor="@color/pos_text_gray_black"
                android:gravity="center_vertical"
                android:id="@id/tv_kitchen_label"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/layout_kitchen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>