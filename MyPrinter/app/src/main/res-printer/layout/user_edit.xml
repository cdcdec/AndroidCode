<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:paddingTop="10.0dip" android:paddingBottom="10.0dip" style="@style/grey_background"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="vertical" android:id="@id/ue_userAccountLayout" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout style="@style/common_round_corner_linearLayout">
                    <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                        <TextView android:text="@string/ue_sUserPhone" style="@style/lable_In_commonRoundCornerLinearLayout" />
                        <TextView android:id="@id/ue_sUserPhone" style="@style/common_textview_black_style" />
                    </LinearLayout>
                    <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                        <TextView android:text="@string/ue_sUserRole" style="@style/lable_In_commonRoundCornerLinearLayout" />
                        <TextView android:id="@id/ue_sUserRole" style="@style/common_textview_black_style" />
                    </LinearLayout>
                    <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">
                        <TextView android:text="@string/ue_sUserStatusTxt" style="@style/lable_In_commonRoundCornerLinearLayout" />
                        <TextView android:id="@id/ue_sUserStatus" android:text="@string/ue_sUserStatusTxt" style="@style/common_textview_black_style" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="10.0dip" style="@style/linearLayout_rounded_rectangle_u">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sUserName" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sUserName" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_rounded_rectangle_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:id="@id/ue_EmailText" android:text="@string/rs_Email" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_EmailEdit" android:inputType="textEmailAddress" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/clickable_linearLayout_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sDeletionFlag" style="@style/edittext_label_style" />
                        <Spinner android:id="@id/ue_sDeletionFlag" android:prompt="@string/ue_sDeletionFlag" style="@style/transparentSpinner_style" />
                    </LinearLayout>
                    <ImageView style="@style/pop_arrow_style" />
                </LinearLayout>
                <LinearLayout android:id="@id/ue_shopIndustryLayout" android:visibility="gone" style="@style/clickable_linearLayout_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/rs_cgtyName" style="@style/edittext_label_style" />
                        <Spinner android:id="@id/ue_shopIndustry" android:prompt="@string/rs_cgtyName" style="@style/transparentSpinner_style" />
                    </LinearLayout>
                    <ImageView style="@style/pop_arrow_style" />
                </LinearLayout>
                <LinearLayout android:id="@id/ue_shopNameLayout" android:visibility="gone" style="@style/linearLayout_rounded_rectangle_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/rs_storeName" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_shopName" android:singleLine="false" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_rounded_rectangle_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/l_password" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sOldUserPassword" android:password="true" android:selectAllOnFocus="true" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_rounded_rectangle_d">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sText" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sText" android:singleLine="false" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/ue_changePassword" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout style="@style/linearLayout_rounded_rectangle_u">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sUserPassword" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sUserPassword" android:password="true" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_rounded_rectangle_m">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sNewUserPassword" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sNewUserPassword" android:password="true" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <LinearLayout style="@style/linearLayout_rounded_rectangle_d">
                    <LinearLayout style="@style/linearLayout_before_pencil">
                        <TextView android:text="@string/ue_sConfirmUserPassword" style="@style/edittext_label_style" />
                        <EditText android:id="@id/ue_sConfirmUserPassword" android:password="true" style="@style/editable_edittext_style" />
                    </LinearLayout>
                    <ImageView style="@style/pencil_style" />
                </LinearLayout>
                <Button android:id="@id/ue_password_saveBtn" android:text="@string/ue_saveBtn" style="@style/bottom_grey_button_style" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>