<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/setting_bg_color"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="300.0dip"
            android:layout_height="fill_parent"
            style="@style/main_setting_scrollview_style">

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/svMainSettingMenu"
                android:paddingTop="8.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="300.0dip"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:id="@id/layout_function_introduction"
                    android:layout_height="55.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/function_introduction"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_function_introduction"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_registered_shop"
                    android:layout_height="55.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/icon_function_setting"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/advertisement_registered_shop"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
            android:background="@color/setting_line_color"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"/>

    <FrameLayout
            android:id="@id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</LinearLayout>