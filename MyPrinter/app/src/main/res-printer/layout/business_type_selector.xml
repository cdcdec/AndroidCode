<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:paddingTop="10.0dip"
              android:paddingBottom="10.0dip"
              style="@style/grey_background">

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@id/business_type_salesLayout"
                    style="@style/clickable_linearLayout_u">

                <LinearLayout style="@style/linearLayout_before_pencil">

                    <TextView
                            android:text="@string/order_type_sale"
                            style="@style/edittext_label_style"/>

                    <TextView style="@style/login_edittext_style"/>
                </LinearLayout>

                <ImageView style="@style/pop_arrow_style"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/business_type_sales_returnLayout"
                    style="@style/clickable_linearLayout_d">

                <LinearLayout style="@style/linearLayout_before_pencil">

                    <TextView
                            android:text="@string/order_type_sale_return"
                            style="@style/edittext_label_style"/>

                    <TextView style="@style/login_edittext_style"/>
                </LinearLayout>

                <ImageView style="@style/pop_arrow_style"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>