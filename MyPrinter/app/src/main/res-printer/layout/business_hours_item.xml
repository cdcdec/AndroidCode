<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <TextView
            android:gravity="center|left"
            android:id="@id/item_layout_tv_left_label"
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="24.0dip"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            style="@style/print_item_layout_label"/>

    <LinearLayout
            android:id="@id/item_layout_ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

        <TextView
                android:gravity="center"
                android:id="@id/item_layout_tv_right_unit"
                android:background="@drawable/setting_leftll_selector_10500"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="@string/tv_same_day"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:layout_centerVertical="true"
                style="@style/item_layout_textable"/>

        <TextView
                android:gravity="center"
                android:id="@id/item_layout_tv_right"
                android:background="@drawable/setting_leftll_selector_10500"
                android:layout_width="60.0dip"
                android:layout_height="40.0dip"
                android:layout_marginRight="12.0dip"
                android:text="23:59"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                style="@style/item_layout_textable"/>
    </LinearLayout>

    <TextView
            android:gravity="center|left"
            android:id="@id/item_layout_tv_unit"
            android:paddingLeft="11.0dip"
            android:paddingRight="11.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:singleLine="true"
            android:layout_toLeftOf="@id/item_layout_ll_right"
            android:layout_centerVertical="true"
            style="@style/print_item_layout_label"/>

    <LinearLayout
            android:id="@id/item_layout_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_toLeftOf="@id/item_layout_tv_unit"
            android:layout_centerVertical="true">

        <TextView
                android:gravity="center"
                android:id="@id/item_layout_tv_left_unit"
                android:background="@drawable/setting_leftll_selector_10500"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="@string/tv_same_day"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:layout_toLeftOf="@id/item_layout_tv_left"
                style="@style/item_layout_textable"/>

        <TextView
                android:gravity="center"
                android:id="@id/item_layout_tv_left"
                android:background="@drawable/setting_leftll_selector_10500"
                android:layout_width="60.0dip"
                android:layout_height="40.0dip"
                android:text="00:00"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                style="@style/item_layout_textable"/>
    </LinearLayout>
</RelativeLayout>