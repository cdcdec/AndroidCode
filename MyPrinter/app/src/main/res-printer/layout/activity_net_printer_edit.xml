<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/pos_big_b_color_10800"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <RelativeLayout
            android:id="@id/content"
            android:paddingTop="24.0dip"
            android:paddingBottom="24.0dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <include
                android:id="@id/layout_name"
                layout="@layout/item_layout_printer_edit"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_usage"
                android:layout_below="@id/layout_name"
                layout="@layout/item_layout_printer_text"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_type"
                android:layout_marginTop="24.0dip"
                android:layout_below="@id/layout_usage"
                layout="@layout/item_layout_printer_edit"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_address"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_type"
                layout="@layout/item_layout_printer_edit"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_port"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_address"
                layout="@layout/item_layout_printer_edit"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_port"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_address"
                layout="@layout/item_layout_printer_edit"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_print_settings"
                android:layout_marginTop="24.0dip"
                android:layout_below="@id/layout_port"
                layout="@layout/item_layout_click_more"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_kitchen_print"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_print_settings"
                layout="@layout/item_layout_click_more"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_kitchen_area_ignore"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_kitchen_print"
                layout="@layout/item_layout_click_more"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_status"
                android:layout_marginTop="24.0dip"
                android:layout_below="@id/layout_kitchen_area_ignore"
                layout="@layout/item_layout_printer_text"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_advanced_settings"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_status"
                layout="@layout/item_layout_click_more"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_diagnose"
                android:layout_marginTop="-1.0dip"
                android:layout_below="@id/layout_advanced_settings"
                layout="@layout/item_layout_click_more"
                style="@style/print_item_layout_style"/>

        <include
                android:id="@id/layout_btn"
                android:layout_marginTop="24.0dip"
                android:layout_below="@id/layout_diagnose"
                layout="@layout/btn_layout_printer_edit"
                style="@style/print_item_layout_style"/>
    </RelativeLayout>
</ScrollView>