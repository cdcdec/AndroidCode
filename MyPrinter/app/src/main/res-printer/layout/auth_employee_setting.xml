<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/grey_background">

    <LinearLayout
            android:orientation="vertical"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

        <LinearLayout style="@style/common_round_corner_linearLayout">

            <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">

                <TextView
                        android:text="@string/ue_sUserPhone"
                        style="@style/lable_In_commonRoundCornerLinearLayout"/>

                <TextView
                        android:id="@id/ue_sUserPhone"
                        style="@style/common_textview_black_style"/>
            </LinearLayout>

            <LinearLayout style="@style/linearLayout_In_commonRoundCornerLinearLayout">

                <TextView
                        android:text="@string/ue_sUserName"
                        style="@style/lable_In_commonRoundCornerLinearLayout"/>

                <TextView
                        android:id="@id/ue_sUserName"
                        android:text=""
                        style="@style/common_textview_black_style"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@id/auth_role_layout"
                android:layout_marginTop="20.0dip"
                style="@style/clickable_linearLayout_rounded_rectangle">

            <LinearLayout style="@style/linearLayout_before_pencil">

                <TextView
                        android:text="@string/auth_list_role_txt"
                        style="@style/edittext_label_style"/>

                <Spinner
                        android:id="@id/auth_role_name"
                        android:prompt="@string/auth_userHint"
                        style="@style/transparentSpinner_style"/>
            </LinearLayout>

            <ImageView style="@style/pop_arrow_style"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>