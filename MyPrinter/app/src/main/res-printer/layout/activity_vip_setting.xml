<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/setting_bg_color"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:layout_width="250.0dip"
            android:layout_height="fill_parent"
            style="@style/main_setting_scrollview_style">

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/svMainSettingMenu"
                android:paddingTop="8.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="250.0dip"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:id="@id/layout_discount"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/ic_discount"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_main_setting_member_discount_title"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <View
                    android:background="@color/setting_line_color"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip"/>

            <LinearLayout
                    android:id="@id/layout_setting"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/pos_member_setting"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_main_setting_member_setting_title"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_points_setting"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/vip_points_setting_icon"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_main_setting_member_points_setting_title"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <View
                    android:background="@color/setting_line_color"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginBottom="8.0dip"/>

            <LinearLayout
                    android:id="@id/layout_sms_setting"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/icon_sms_notification"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_main_setting_sms_setting_title"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_marketing_setting"
                    android:visibility="gone"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/vip_market_setting"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_main_setting_marketing_setting_title"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_credit_setting"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:src="@drawable/icon_vip_credit"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/vip_credit_setting"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
            android:background="@color/setting_line_color"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"/>

    <FrameLayout
            android:id="@id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</LinearLayout>