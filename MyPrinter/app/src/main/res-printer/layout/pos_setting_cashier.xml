<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/paytype" style="@style/pos_setting_right_item">
        <TextView android:layout_width="wrap_content" android:text="@string/pos_paytype_title" style="@style/pos_setting_right_item_lab" />
        <TextView android:id="@id/function_hint_paytype" android:visibility="gone" style="@style/red_dot_function" />
        <TextView android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
    <LinearLayout android:id="@id/order_type" android:visibility="gone" style="@style/pos_setting_right_item">
        <TextView android:layout_width="wrap_content" android:text="@string/pos_order_type_title" style="@style/pos_setting_right_item_lab" />
        <TextView android:id="@id/function_hint_order_type" android:visibility="gone" style="@style/red_dot_function" />
        <TextView android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
    <LinearLayout android:id="@id/discount_setting" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_product_discount_setting" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
    <LinearLayout android:id="@id/neglect_the_small_changes_ll" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/neglect_the_small_change_settings" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
    <View style="@style/pos_setting_right_item_line" />
    <LinearLayout android:id="@id/type_rows_l" android:visibility="gone" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:id="@id/decimals_l" android:text="@string/pos_cashier_product_type_lines" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <TextView android:id="@id/type_rows" style="@style/pos_setting_right_item_value" />
    </LinearLayout>
    <LinearLayout android:id="@id/product_sort_l" android:visibility="gone" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_product_sort" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <TextView android:id="@id/product_sort" style="@style/pos_setting_right_item_value" />
    </LinearLayout>
    <View android:visibility="gone" style="@style/pos_setting_right_item_line" />
    <LinearLayout android:id="@id/product_query_l" android:visibility="gone" style="@style/pos_setting_right_item">
        <TextView android:gravity="center|left" android:text="@string/pos_product_query" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View android:id="@id/product_query_check" style="@style/pos_setting_right_item_check" />
    </LinearLayout>
    <LinearLayout android:id="@id/tablet_l" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/tablet_no" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View android:id="@id/tablet_check" style="@style/pos_setting_right_item_check" />
    </LinearLayout>
    <LinearLayout android:id="@id/layout_product_merge" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/product_merge_label" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View android:id="@id/v_checkbox_product_merge" style="@style/pos_setting_right_item_check" />
    </LinearLayout>
    <LinearLayout android:id="@id/product_code_l" android:visibility="gone" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_product_code" style="@style/pos_setting_right_item_lab" />
        <TextView android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View android:id="@id/product_code_check" style="@style/pos_setting_right_item_check" />
    </LinearLayout>
    <View style="@style/pos_setting_right_item_line" />
    <LinearLayout android:id="@id/decimals_ll" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_cashier_decimal_set" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
    <LinearLayout android:id="@id/product_name_l" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_product_name_set" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <TextView android:id="@id/product_name" style="@style/pos_setting_right_item_value" />
    </LinearLayout>
    <LinearLayout android:id="@id/bill_number" style="@style/pos_setting_right_item">
        <TextView android:gravity="left" android:text="@string/pos_bill_number_setting" android:layout_weight="1.0" style="@style/pos_setting_right_item_lab" />
        <View style="@style/pos_setting_right_item_icon" />
    </LinearLayout>
</LinearLayout>