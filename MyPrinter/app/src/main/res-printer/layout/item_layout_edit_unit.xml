<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <TextView
            android:gravity="center|left"
            android:id="@id/item_layout_tv_left"
            android:layout_width="170.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="24.0dip"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            style="@style/print_item_layout_label"/>

    <TextView
            android:gravity="center|left"
            android:id="@id/item_layout_tv_unit"
            android:paddingLeft="11.0dip"
            android:paddingRight="11.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:layout_marginRight="24.0dip"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/print_item_layout_label"/>

    <EditText
            android:gravity="center|right"
            android:id="@id/item_layout_et_right"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_toLeftOf="@id/item_layout_tv_unit"
            android:layout_toRightOf="@id/item_layout_tv_left"
            android:layout_centerVertical="true"
            style="@style/print_item_layout_editable"/>
</RelativeLayout>