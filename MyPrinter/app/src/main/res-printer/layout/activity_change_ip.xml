<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@color/confirm_button_bg_grey_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:background="@anim/shape_rectangle_only_click"
            android:layout_width="700.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="24.0dip"
            android:layout_marginBottom="24.0dip"
            android:layout_centerInParent="true">

        <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:layout_width="350.0dip"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <TextView
                        android:gravity="center|left"
                        android:id="@id/tv_brand_label"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0"
                        style="@style/print_item_layout_label"/>

                <TextView
                        android:gravity="center|right"
                        android:id="@id/tv_brand"
                        android:paddingLeft="24.0dip"
                        android:paddingRight="24.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20.0dip"
                        android:singleLine="true"
                        android:digits="0123456789."
                        android:layout_weight="4.0"
                        android:inputType="number"
                        style="@style/print_item_layout_editable"/>
            </LinearLayout>

            <LinearLayout
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <TextView
                        android:gravity="center|left"
                        android:id="@id/tv_old_ip_label"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0"
                        style="@style/print_item_layout_label"/>

                <EditText
                        android:gravity="center|right"
                        android:id="@id/et_old_ip"
                        android:paddingLeft="24.0dip"
                        android:paddingRight="24.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20.0dip"
                        android:singleLine="true"
                        android:digits="0123456789."
                        android:layout_weight="4.0"
                        android:inputType="number"
                        style="@style/print_item_layout_editable"/>

                <Button
                        android:textSize="20.0dip"
                        android:id="@id/btn_connect"
                        android:background="@drawable/transparent_button_selector_10500"
                        android:visibility="gone"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"/>
            </LinearLayout>

            <LinearLayout
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <TextView
                        android:gravity="center|left"
                        android:id="@id/tv_new_ip_label"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="2.0"
                        style="@style/print_item_layout_label"/>

                <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20.0dip"
                        android:layout_weight="4.0">

                    <EditText
                            android:textSize="20.0dip"
                            android:gravity="center|right"
                            android:id="@id/et_new_ip"
                            android:paddingLeft="24.0dip"
                            android:paddingRight="24.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:singleLine="true"
                            android:digits="0123456789."
                            android:inputType="number"
                            style="@style/print_item_layout_editable"/>

                    <Button
                            android:textSize="20.0dip"
                            android:textColor="#ffffffff"
                            android:id="@id/btn_new_ip"
                            android:background="@drawable/ui201407_red_button_background_only"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"/>

                    <com.laiqian.ui.ProgressBarCircularIndeterminate
                            android:id="@id/pb_new_ip"
                            android:background="@color/new_pos_dialog_top_text"
                            android:visibility="gone"
                            android:layout_width="30.0dip"
                            android:layout_height="30.0dip"
                            android:layout_centerInParent="true"/>
                </RelativeLayout>

                <Button
                        android:textSize="20.0dip"
                        android:id="@id/btn_gen"
                        android:background="@drawable/transparent_button_selector_10500"
                        android:visibility="gone"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <Button
                        android:textSize="20.0dip"
                        android:textColor="#ffffffff"
                        android:id="@id/btn_modify"
                        android:background="@drawable/submit_btn_selector_1033"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="8.0dip"/>

                <com.laiqian.ui.ProgressBarCircularIndeterminate
                        android:id="@id/pb_modify"
                        android:background="@color/new_pos_dialog_top_text"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="14.0dip"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/red_color_10500"
                    android:gravity="center|left"
                    android:id="@id/tv_error_info"
                    android:layout_width="fill_parent"
                    android:layout_height="46.0dip"/>

            <TextView
                    android:textSize="16.0dip"
                    android:textColor="#ff999999"
                    android:gravity="bottom"
                    android:id="@id/tv_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="48.0dip"
                    android:layout_marginBottom="24.0dip"
                    android:singleLine="false"/>
        </LinearLayout>

        <include
                android:id="@id/layout_keyboard"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_margin="1.0px"
                android:layout_weight="1.0"
                layout="@layout/layout_keyboard"/>
    </LinearLayout>
</RelativeLayout>