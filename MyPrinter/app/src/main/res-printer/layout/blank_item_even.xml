<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@id/bg"
            android:background="@color/white_text_color"
            android:layout_width="1008.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip">

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_points"
                android:paddingRight="10.0dip"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_balance"
                android:paddingRight="10.0dip"
                android:layout_width="90.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_points"
                android:inputType="none"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_total_consume"
                android:paddingRight="10.0dip"
                android:layout_width="110.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_balance"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_consume_times"
                android:paddingRight="10.0dip"
                android:layout_width="110.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_total_consume"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_latest_consume"
                android:paddingRight="10.0dip"
                android:layout_width="110.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_consume_times"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_birthday"
                android:paddingRight="10.0dip"
                android:layout_width="100.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_latest_consume"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_mobile_phone"
                android:paddingRight="10.0dip"
                android:layout_width="120.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_birthday"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|right"
                android:id="@id/tv_card_number"
                android:paddingRight="10.0dip"
                android:layout_width="120.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_mobile_phone"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|left"
                android:id="@id/tv_member_name"
                android:paddingLeft="10.0dip"
                android:layout_width="100.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_card_number"/>

        <TextView
                android:textSize="16.0dip"
                android:textColor="@color/member_list_item_max"
                android:gravity="center|left"
                android:id="@id/tv_serial_number"
                android:paddingLeft="10.0dip"
                android:layout_width="50.0dip"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_card_number"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_points"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_balance"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_total_consume"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_consume_times"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_latest_consume"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_birthday"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_mobile_phone"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_card_number"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/tv_member_name"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"/>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>