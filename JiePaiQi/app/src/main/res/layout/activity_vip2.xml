<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#ff303030"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip">

                <ImageView
                        android:id="@+id/vip_back"
                        android:padding="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15.0dip"
                        android:src="@drawable/icon_back"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>

            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:src="@drawable/icon"/>

            <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="50.0dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/line1"/>

                <View
                        android:layout_width="5.0dip"
                        android:layout_height="match_parent"/>

                <TextView
                        android:textSize="17.0sp"
                        android:textStyle="bold"
                        android:textColor="#ffd0d0d0"
                        android:gravity="center"
                        android:id="@+id/viptexiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vipzhuanxianggongneng"/>

                <View
                        android:layout_width="5.0dip"
                        android:layout_height="match_parent"/>

                <ImageView
                        android:layout_width="50.0dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/line1"/>
            </LinearLayout>

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ffe7e7e7"
                    android:id="@+id/changxiangsuoyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60.0dip"
                    android:layout_marginTop="30.0dip"
                    android:text="@string/changxiangsuoyoujiepai"
                    android:drawableLeft="@drawable/dian"
                    android:drawablePadding="10.0dip"/>

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ffe7e7e7"
                    android:id="@+id/jiesuosuoyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/jiesuosuoyoumorenjiapi"
                    android:drawableLeft="@drawable/dian"
                    android:drawablePadding="10.0dip"/>

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="#ffe7e7e7"
                    android:id="@+id/yichushouyeguanggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="@string/yichushouyeguanggao"
                    android:drawableLeft="@drawable/dian"
                    android:drawablePadding="10.0dip"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip"
                    android:src="@drawable/line3"/>

            <TextView
                    android:textSize="17.0sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/dingyueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="10.0dip"/>

            <include layout="@layout/item_vip_month1"/>

            <include layout="@layout/item_vip_season1"/>

            <include layout="@layout/item_vip_year1"/>

            <TextView
                    android:textSize="12.0sp"
                    android:textColor="#80ffffff"
                    android:gravity="center"
                    android:autoLink="all"
                    android:id="@+id/buydetail"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dip"
                    android:text="@string/goumaishuominglianxifangshi"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>