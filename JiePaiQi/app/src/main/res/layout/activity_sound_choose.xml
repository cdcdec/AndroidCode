<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#ff2a2a2a"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:background="#ff131313"
            android:layout_width="match_parent"
            android:layout_height="44.0dip">

        <TextView
                android:textSize="18.0sp"
                android:textColor="#ffffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yinse"
                android:layout_centerInParent="true"/>

        <ImageButton
                android:id="@+id/cancelBtn"
                android:background="@color/clearColor"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="20.0dip"
                android:src="@drawable/nav_icon_back"
                android:layout_centerVertical="true"
                android:onClick="cancelClick"/>

        <ImageView
                android:id="@+id/ok_btn"
                android:layout_width="24.0dip"
                android:layout_height="match_parent"
                android:layout_marginRight="20.0dip"
                android:src="@drawable/bomb_icon_defines"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
            android:id="@+id/soundList"
            android:background="#ff2a2a2a"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"/>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bannerLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>