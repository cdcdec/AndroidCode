<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:background="#ff131313"
            android:layout_width="match_parent"
            android:layout_height="48.0dip">

        <ImageView
                android:id="@+id/exitBtn"
                android:padding="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.0dip"
                android:src="@drawable/back"
                android:layout_centerVertical="true"/>

        <TextView
                android:textSize="18.0sp"
                android:textColor="#ffffffff"
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一关"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/red_relat"
                    android:background="@drawable/default3_1"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/red_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight3_red"
                        android:scaleType="fitXY"/>

                <ImageView
                        android:id="@+id/red_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48.0dip"
                        android:src="@drawable/btn_red"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/yellow_relat"
                    android:background="@drawable/default3_2"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/yellow_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight3_yellow"
                        android:scaleType="fitXY"/>

                <ImageView
                        android:id="@+id/yellow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48.0dip"
                        android:src="@drawable/btn_yellow"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/white_relat"
                    android:background="@drawable/default3_3"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/white_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/highlight3_white"
                        android:scaleType="fitXY"/>

                <ImageView
                        android:id="@+id/white_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48.0dip"
                        android:src="@drawable/btn_white"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:id="@+id/chongtingyici"
                android:background="@drawable/chongting_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/game_icon_again">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/game_icon_again"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.0dip"
                    android:text="@string/chongtingyici"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>