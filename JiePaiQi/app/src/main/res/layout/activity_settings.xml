<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="#ff303030"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView10"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:srcCompat="@drawable/bg3"/>

    <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginRight="0.0dip"
            android:text="@string/shezhi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            android:background="@color/clearColor"
            android:layout_width="50.0dip"
            android:layout_height="0.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:src="@drawable/back"
            android:onClick="settingsBackClick"
            app:layout_constraintBottom_toBottomOf="@id/textView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_settings"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="0.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_weight="1.0"
            app:layout_constraintBottom_toTopOf="@id/guideline36"
            app:layout_constraintLeft_toLeftOf="@id/guideline37"
            app:layout_constraintRight_toLeftOf="@id/guideline38"
            app:layout_constraintTop_toTopOf="@id/guideline33"/>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/bannerLayout5"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.0dip"
            android:layout_marginRight="0.0dip"
            android:layout_marginBottom="0.0dip"
            app:layout_constraintBottom_toBottomOf="@id/imageView10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.16"/>

    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:id="@+id/guideline36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.87"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.07"/>

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.93"/>
</android.support.constraint.ConstraintLayout>