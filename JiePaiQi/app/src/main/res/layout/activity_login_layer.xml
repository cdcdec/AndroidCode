<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="250.0dip">

    <RelativeLayout
            android:background="@drawable/login_layer"
            android:layout_width="match_parent"
            android:layout_height="250.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_centerInParent="true">

        <TextView
                android:textSize="18.0sp"
                android:textColor="#ff303030"
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35.0dip"
                android:text="@string/login_title"
                android:layout_centerHorizontal="true"/>

        <ImageView
                android:id="@+id/iv_loginclose"
                android:padding="15.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_close"
                android:layout_alignParentRight="true"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_above="@id/tv_acclogin"
                android:layout_below="@id/tv_title">

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_login1"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/iv_wxlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/login_weixin"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:textSize="15.0sp"
                        android:textColor="#ff202020"
                        android:id="@+id/tv_wxlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/login_wx1"
                        android:layout_below="@id/iv_wxlogin"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_login2"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/iv_qqlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/login_qq"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:textSize="15.0sp"
                        android:textColor="#ff202020"
                        android:id="@+id/tv_qqlogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/login_qq1"
                        android:layout_below="@id/iv_qqlogin"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_login3"
                    android:visibility="gone"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/iv_wblogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/login_weibo"
                        android:layout_centerHorizontal="true"/>

                <TextView
                        android:textSize="15.0sp"
                        android:textColor="#ff202020"
                        android:id="@+id/tv_wblogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/login_wb1"
                        android:layout_below="@id/iv_wblogin"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:gravity="center"
                    android:id="@+id/rl_login4"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:id="@+id/iv_alilogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/login_zhifubao"
                        android:layout_centerInParent="true"/>

                <TextView
                        android:textSize="15.0sp"
                        android:textColor="#ff202020"
                        android:id="@+id/tv_alilogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="@string/login_ali1"
                        android:layout_below="@id/iv_alilogin"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
                android:textSize="13.0sp"
                android:textColor="#ff9e9e9e"
                android:id="@+id/tv_acclogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_login"
                android:layout_above="@id/vw_bottomline"
                android:layout_centerHorizontal="true"/>

        <View
                android:id="@+id/vw_bottomline"
                android:background="#ff9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="1.0dip"
                android:layout_marginBottom="10.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignStart="@id/tv_acclogin"
                android:layout_alignEnd="@id/tv_acclogin"/>
    </RelativeLayout>
</RelativeLayout>