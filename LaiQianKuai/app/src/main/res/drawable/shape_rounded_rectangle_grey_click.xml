<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/retail_grey_click_color" />
            <stroke android:width="1.0dip" android:color="@color/ui201404_smj_viewgroup_background_white_stroke_2corners" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/ui201404_smj_viewgroup_background_white_solid" />
            <stroke android:width="1.0dip" android:color="#80c0bfbe" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/retail_grey_click_color" />
            <stroke android:width="1.0dip" android:color="@color/ui201404_smj_viewgroup_background_white_stroke_2corners" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
