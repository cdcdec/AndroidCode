    <item android:state_selected="true" android:drawable="@drawable/pay_weixin_selected">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@color/pos_text_red" />
        </shape>
    </item>
    <item android:state_active="true" android:drawable="@drawable/pay_weixin_selected">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@color/pos_text_red" />
        </shape>
    </item>
    <item android:drawable="@drawable/pay_weixin_unselected">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="#ffd7d7d7" />
        </shape>
    </item>
</selector>