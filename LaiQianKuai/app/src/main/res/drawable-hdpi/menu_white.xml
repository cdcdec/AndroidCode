<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffcccccc" />
            <stroke android:width="2.0dip" android:color="#ffcccccc" />
            <corners android:radius="10.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dip" android:color="#ffcccccc" />
            <corners android:radius="10.0dip" />
            <gradient android:startColor="#ffffffff" android:endColor="#fff1f1f1" android:angle="270.0" android:centerColor="#ffffffff" />
        </shape>
    </item>
</selector>