    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/setting_select_bg_color" />
            <corners android:topLeftRadius="2.0dip" android:bottomLeftRadius="2.0dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/pos_text_red" />
            <corners android:topLeftRadius="2.0dip" android:bottomLeftRadius="2.0dip" />
        </shape>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>