<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/pos_backspace_key_press_the2">
        <shape>
            <gradient android:startColor="#ffaecaf2" android:endColor="#ffaecaf2" android:angle="270.0" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@drawable/pos_backspace_key_press_the2">
        <shape>
            <gradient android:startColor="#ffffc2b7" android:endColor="#ffffc2b7" android:angle="270.0" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
    <item android:drawable="@drawable/pos_backspace_key5">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:angle="180.0" />
            <corners android:radius="4.0px" />
        </shape>
    </item>
</selector>