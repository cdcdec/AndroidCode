<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#fff8f8f8" android:angle="180.0" />
            <solid android:color="@color/viewgroup_pressed" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#fff8f8f8" android:angle="180.0" />
            <solid android:color="#ffeeeeee" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#fff8f8f8" android:angle="180.0" />
            <solid android:color="@color/red_color_10500" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <gradient android:startColor="#ffffffff" android:endColor="#fff8f8f8" android:angle="180.0" />
            <solid android:color="@color/red_color_10500" />
            <corners android:radius="@dimen/dp_4" />
        </shape>
    </item>
</selector>