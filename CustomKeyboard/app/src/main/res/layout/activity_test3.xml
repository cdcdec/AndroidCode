<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cdc.test3.Test3Activity"
    >


    <RelativeLayout
            android:id="@+id/topRel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:orientation="horizontal"
            android:background="#ffeeeeee"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
                android:id="@+id/ivTop"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp36"
                android:layout_marginLeft="@dimen/dp24"
                android:src="@drawable/pos_logo2"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                />

        <TextView
                android:textSize="21.0dip"
                android:textColor="@color/setting_text_color1"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp18"
                android:text="来钱快 · 餐饮版"
                android:layout_toRightOf="@id/ivTop"
                android:layout_centerVertical="true"/>

        <ImageView
                android:id="@+id/btn_hint"
                android:background="@drawable/titlebar_leftbt_selector_10500"
                android:paddingLeft="@dimen/dp24"
                android:paddingRight="@dimen/dp24"
                android:layout_width="@dimen/dp78"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp16"
                android:src="@drawable/question_mark"
                android:scaleType="centerInside"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
            android:id="@+id/viewLine1"
            android:background="#ffd7d7d7"
            android:layout_width="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topRel"
            android:layout_height="@dimen/dp1"/>

    <LinearLayout
            android:id="@+id/l_userPhoneLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp226"
            app:layout_constraintTop_toBottomOf="@id/viewLine1"
            android:focusable="true"
            android:background="@drawable/shape_rounded_rectangle_up"
            android:focusableInTouchMode="true"
            android:layout_width="@dimen/dp400"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp58">

        <ImageView
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginRight="@dimen/dp13"
                android:layout_gravity="center_vertical"
                android:src="@drawable/pos_login_phone"/>

        <View
                android:background="#ffd7d7d7"
                android:layout_width="@dimen/dp1"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/dp36"/>
        <!--android:textColor="#ff984d10"-->
      <!--  <AutoCompleteTextView
                android:layout_width="@dimen/dp328"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp20"
                android:id="@+id/l_userPhone"
                android:paddingLeft="@dimen/dp10"
                android:hint="手机号"
                android:maxLength="15"
                android:completionThreshold="1"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:dropDownHeight="@dimen/dp120"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                style="@style/editable_login_edit_text_style"
                />-->

        <EditText
                android:layout_width="@dimen/dp328"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp20"
                android:id="@+id/l_userPhone"
                android:paddingLeft="@dimen/dp10"
                android:hint="手机号"
                android:maxLength="15"
                android:completionThreshold="1"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:dropDownHeight="@dimen/dp120"
                android:layout_gravity="center_vertical"
                style="@style/editable_login_edit_text_style"
                />

    </LinearLayout>


    <LinearLayout
            android:id="@+id/l_passwordLayout"
            app:layout_constraintLeft_toLeftOf="@id/l_userPhoneLayout"
            app:layout_constraintTop_toBottomOf="@id/l_userPhoneLayout"
            android:background="@drawable/shape_rounded_rectangle_down"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="@dimen/dp400"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="-1.0dip"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/iv_password"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:layout_marginLeft="@dimen/dp13"
                android:layout_marginRight="@dimen/dp13"
                android:src="@drawable/pos_login_password"
                android:layout_gravity="center_vertical"
                />

        <View
                android:id="@+id/v_line"
                android:background="@color/setting_line_color"
                android:layout_width="@dimen/dp1"
                android:layout_height="@dimen/dp36"
                android:layout_toRightOf="@id/iv_password"
                android:layout_gravity="center_vertical"
                />

        <EditText
                android:textSize="@dimen/sp20"
                android:textColor="@color/setting_text_color3"
                android:id="@+id/l_password"
                android:paddingLeft="@dimen/dp10"
                android:layout_width="@dimen/dp280"
                android:layout_height="match_parent"
                android:hint="密码"
                android:layout_toRightOf="@id/v_line"
                android:layout_gravity="center_vertical"
                android:imeOptions="actionDone"
                style="@style/editable_login_edit_text_style"/>

        <com.cdc.Keyboard.ImageCheckBox
                android:id="@+id/icbPassword"
                android:paddingLeft="@dimen/dp10"
                android:layout_width="@dimen/dp40"
                android:background="@drawable/selector_checkbox_login_password"
                android:visibility="visible"
                android:clickable="true"
                android:layout_height="@dimen/dp25"
                android:layout_marginRight="@dimen/dp10"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <Button
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/dp113"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/l_userPhoneLayout"
            app:layout_constraintBottom_toBottomOf="@id/l_passwordLayout"
            app:layout_constraintLeft_toRightOf="@id/l_passwordLayout"
            android:layout_marginLeft="@dimen/dp27"
            android:background="@drawable/shape_rounded_rectangle_only_click"
            android:text="登录"
            android:textSize="@dimen/sp21"
            />

    <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            android:layout_marginTop="@dimen/dp17"
            app:layout_constraintLeft_toLeftOf="@id/l_passwordLayout"
            android:text="手机号不存在"/>

    <TextView
            android:id="@+id/tvForgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            android:layout_marginTop="@dimen/dp17"
            app:layout_constraintRight_toRightOf="@id/l_passwordLayout"
            android:text="忘记密码"/>

    <TextView
            android:id="@+id/tvReRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            android:layout_marginTop="@dimen/dp17"
            app:layout_constraintRight_toLeftOf="@id/tvForgetPwd"
            android:layout_marginRight="@dimen/dp14"
            android:text="重新注册"/>

    <com.cdc.Keyboard.KeyBoardLinearLayout
            android:id="@+id/myKeyBoard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReRegister"
            android:layout_marginTop="@dimen/dp17"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp5"
           >

    </com.cdc.Keyboard.KeyBoardLinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>