<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:background="@color/setting_bg_color"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              tools:context="com.cdc.keyboard.activities.ShopInfoSettingsActivity"
              style="@style/grey_background">

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:id="@id/leftScrollView"
            android:layout_width="250.0dip"
            android:layout_height="fill_parent"
            style="@style/main_setting_scrollview_style">

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/svMainSettingMenu"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@id/layout_shop_basic_info"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:visibility="gone"
                        android:src="@drawable/pos_member_setting"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/shop_basic_info"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_shop_device_mode"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:visibility="gone"
                        android:src="@drawable/vip_recharge"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/cashier_mode_shop"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/layout_shop_more"
                    android:layout_height="56.0dip"
                    style="@style/main_setting_left_ll1">

                <ImageView
                        android:visibility="gone"
                        android:src="@drawable/vip_points_setting_icon"
                        style="@style/main_setting_left_imageview"/>

                <TextView
                        android:text="@string/pos_more"
                        style="@style/main_setting_left_tv2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
            android:background="@color/setting_line_color"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"/>

    <FrameLayout
            android:id="@id/fl_fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</LinearLayout>
