                android:layout_centerVertical="true"
                app:direction="row"
                app:dot_alignToIcon="false"
                app:dot_color="@color/red_color_10500"
                app:dot_visible="false"
                app:icon="@drawable/pos_logo2"
                app:icon_height="@dimen/w48_4"
                app:icon_width="@dimen/w48_4"
                app:spacing="@dimen/w11_0"
