                android:layout_width="@dimen/w77_8"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/w16_0"/>

        <com.assistne.icondottextview.IconDotTextView
                android:textSize="@dimen/wsp14"
                android:id="@id/settingsIdTv"
