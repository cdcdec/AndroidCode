<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/keyboard_lay_letter"
            android:paddingLeft="@dimen/w16_0"
            android:paddingRight="@dimen/w16_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboardViewLeft"
                android:background="@color/setting_bg_color"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:shadowRadius="0.0"
                android:layout_weight="10.0"
                android:keyBackground="@drawable/keyboard_bg"
                android:keyTextColor="#ff3b3b3b"/>

        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboardViewRight"
                android:background="@color/setting_bg_color"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w15_0"
                android:shadowRadius="0.0"
                android:layout_weight="3.0"
                android:keyBackground="@drawable/keyboard_bg"
                android:keyTextColor="#ff3b3b3b"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/keyboard_lay_symbol"
            android:paddingLeft="@dimen/w16_0"
            android:paddingRight="@dimen/w16_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view_symbol_left"
                android:background="@color/setting_bg_color"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:shadowRadius="0.0"
                android:layout_weight="10.0"
                android:keyBackground="@drawable/keyboard_bg"
                android:keyTextColor="#ff3b3b3b"/>

        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view_symbol_right"
                android:background="@color/setting_bg_color"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w15_0"
                android:shadowRadius="0.0"
                android:layout_weight="3.0"
                android:keyBackground="@drawable/keyboard_bg"
                android:keyTextColor="#ff3b3b3b"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/keyboard_lay_number"
            android:paddingLeft="@dimen/w16_0"
            android:paddingRight="@dimen/w16_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"/>

        <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view_number"
                android:background="@color/setting_bg_color"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w15_0"
                android:shadowRadius="0.0"
                android:layout_weight="3.0"
                android:keyBackground="@drawable/keyboard_bg"
                android:keyTextColor="#ff3b3b3b"/>

        <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5.0"/>
    </LinearLayout>
</LinearLayout>