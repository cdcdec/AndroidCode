<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:minHeight="@dimen/w75_0"
              android:layout_width="match_parent"
              android:layout_height="@dimen/w75_0"
              android:clickable="true"
              android:paddingLeft="@dimen/w32_4"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:background="@drawable/setting_leftll_selector_10500"
              >
    <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="@dimen/w40_4"
            android:layout_height="@dimen/w40_4"
            android:scaleType="fitXY"
            android:gravity="center_vertical"
           />

    <TextView
            android:id="@+id/tvLeft"
            android:text="tvLeft"
            android:textSize="@dimen/wsp20"
            android:textColor="@color/setting_text_color1"
            android:layout_gravity="center|left"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/w22_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minHeight="@dimen/w40_4"

            />
    <TextView
            android:id="@+id/tvLeft2"
            android:visibility="gone"
            android:text="tvLeft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvLeft3"
            android:visibility="gone"
            android:text="tvLeft3"
            android:textSize="@dimen/wsp10"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:layout_gravity="center|right|top"
            android:background="@drawable/pos_oval_red"
            android:layout_width="@dimen/w13_8"
            android:layout_height="@dimen/w13_8"
            android:layout_marginTop="@dimen/w15_0"
            android:layout_marginRight="@dimen/w11_0"
            />
    <RelativeLayout
            android:id="@+id/relRight"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0">
        <ImageView
                android:id="@+id/ivRight"
                android:visibility="visible"
                android:layout_width="@dimen/w33_6"
                android:layout_height="@dimen/w33_6"
                android:layout_marginRight="@dimen/w13_8"
                android:src="@drawable/icon_triangle_warning"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>