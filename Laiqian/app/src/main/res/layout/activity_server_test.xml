<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <EditText
            android:id="@id/et_input_method_type"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:numeric="integer"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@id/bt_debug_single_product"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:text="单个商品调试"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@id/bt_debug_multiple_product"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:text="多个商品调试"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@id/bt_query_order"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:text="查询插入结果"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@id/bt_clean_order"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:text="清空挂单数据"
            android:layout_centerVertical="true"/>

    <Button
            android:id="@id/bt_jump_to_main_page"
            android:layout_width="400.0dip"
            android:layout_height="36.0dip"
            android:text="跳到主页面"
            android:layout_centerVertical="true"/>

    <TextView
            android:scrollbarStyle="insideOverlay"
            android:id="@id/tv_message"
            android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="false"
            android:layout_centerVertical="true"
            android:scrollbarFadeDuration="1000"/>
</LinearLayout>