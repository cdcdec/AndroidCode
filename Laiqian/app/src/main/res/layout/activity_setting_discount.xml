<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/pos_big_b_color_10800"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <RelativeLayout
            android:id="@id/default_discount_rl"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:layout_width="650.0dip"
            android:layout_marginTop="8.0dip"
            style="@style/pos_setting_right_item">

        <TextView
                android:gravity="center|left"
                android:id="@id/item_layout_tv_left"
                android:layout_width="150.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="24.0dip"
                android:text="@string/default_discount"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                style="@style/print_item_layout_label"/>

        <TextView
                android:gravity="center|left"
                android:id="@id/item_layout_tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:layout_marginRight="24.0dip"
                android:text="%"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/print_item_layout_label"/>

        <EditText
                android:gravity="center|right"
                android:id="@id/item_layout_et_right"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:layout_toLeftOf="@id/item_layout_tv_unit"
                android:layout_toRightOf="@id/item_layout_tv_left"
                android:layout_centerVertical="true"
                style="@style/print_item_layout_editable"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@id/paytype_discount"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:layout_width="650.0dip"
            android:layout_marginTop="-1.0dip"
            style="@style/pos_setting_right_item">

        <TextView
                android:gravity="center|left"
                android:layout_marginLeft="24.0dip"
                android:text="@string/pos_product_type_discount"
                android:layout_weight="1.0"
                style="@style/pos_setting_right_item_lab"/>

        <View
                android:layout_marginRight="24.0dip"
                style="@style/pos_setting_right_item_icon"/>
    </LinearLayout>
</LinearLayout>