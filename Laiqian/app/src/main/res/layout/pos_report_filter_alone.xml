<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="264.0dip"
            android:layout_height="fill_parent"
            android:fillViewport="true"
            style="@style/pos_list">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/show_type_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@id/llReport_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@id/tv_report_lab"
                        android:text="@string/pos_report_showtype_lab"
                        style="@style/pos_report_filter_hint"/>

                <ImageView
                        android:layout_gravity="center"
                        android:id="@id/ivReport_hint"
                        android:paddingLeft="14.0dip"
                        android:paddingRight="14.0dip"
                        android:layout_width="50.0dip"
                        android:layout_height="15.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/question_tip"
                        android:scaleType="centerInside"
                        android:layout_alignParentRight="true"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/show_type_group"
                    android:paddingLeft="24.0dip"
                    android:paddingRight="24.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <TextView style="@style/pos_report_filter_text_canclick"/>

                <TextView style="@style/pos_report_filter_text_canclick"/>

                <TextView style="@style/pos_report_filter_text_canclick"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@id/show_type_group2"
                    android:paddingLeft="24.0dip"
                    android:paddingRight="24.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip">

                <TextView style="@style/pos_report_filter_text_canclick"/>

                <TextView style="@style/pos_report_filter_text_canclick"/>

                <TextView style="@style/pos_report_filter_text_canclick"/>
            </LinearLayout>

            <View style="@style/pos_line_h"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/date_l"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/pos_report_datetime_lab"
                    style="@style/pos_report_filter_hint"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/pos_report_filter_time_fast_background"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:layout_marginLeft="24.0dip"
                    android:layout_marginRight="24.0dip">

                <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@id/date_fast_l"
                        android:background="@drawable/pos_report_filter_time_fast_background_left"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0">

                    <TextView
                            android:gravity="center_vertical"
                            android:id="@id/date_fast"
                            android:duplicateParentState="true"
                            style="@style/pos_report_filter_time_fast"/>

                    <View
                            android:background="@drawable/pos_report_down_arrow_selecte"
                            android:layout_width="9.0dip"
                            android:layout_height="4.0dip"
                            android:layout_marginLeft="8.0dip"/>
                </LinearLayout>

                <View
                        android:id="@id/date_line"
                        android:background="@color/pos_text_grey"
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"/>

                <TextView
                        android:gravity="center"
                        android:id="@id/date_shift"
                        android:background="@drawable/pos_report_filter_time_fast_background_right"
                        android:layout_width="0.0dip"
                        android:text="@string/pos_report_fastSelect_shift"
                        android:layout_weight="1.0"
                        style="@style/pos_report_filter_time_fast"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/time_start_l"
                    android:background="@drawable/pos_simple_click_background"
                    style="@style/pos_report_filter_group_canclick">

                <TextView
                        android:textSize="20.0dip"
                        android:textColor="@color/pos_detailed_text_black"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="48.0dip"
                        android:text="@string/pos_report_from"
                        android:layout_centerVertical="true"/>

                <TextView
                        android:textSize="18.0dip"
                        android:gravity="center|right"
                        android:id="@id/time_start"
                        android:duplicateParentState="true"
                        style="@style/pos_report_filter_text_canclick_brown"/>

                <View
                        android:layout_marginLeft="10.0dip"
                        style="@style/pos_report_filter_right_down_icon"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/time_end_l"
                    android:background="@drawable/pos_simple_click_background"
                    style="@style/pos_report_filter_group_canclick">

                <TextView
                        android:textSize="20.0dip"
                        android:textColor="@color/pos_detailed_text_black"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="48.0dip"
                        android:text="@string/pos_report_to"
                        android:layout_centerVertical="true"/>

                <TextView
                        android:textSize="18.0dip"
                        android:gravity="center|right"
                        android:id="@id/time_end"
                        android:duplicateParentState="true"
                        style="@style/pos_report_filter_text_canclick_brown"/>

                <View
                        android:layout_marginLeft="10.0dip"
                        style="@style/pos_report_filter_right_down_icon"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/custom_filter"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_marginTop="8.0dip"
                    style="@style/pos_line_h"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/filter_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/pay_mode_l"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_marginTop="8.0dip"
                        style="@style/pos_line_h"/>

                <LinearLayout
                        android:id="@id/select_pay_sales"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:text="@string/pos_report_transaction_pay_mode"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/pay_sales"
                            style="@style/pos_report_filter_text_canclick_brown"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@id/select_pay_mode"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:id="@id/tv_select_able"
                            android:text="@string/pos_member_report_child_type"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/pay_mode"
                            style="@style/pos_report_filter_text_canclick_brown"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/pay_second_mode_l"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_marginTop="8.0dip"
                        style="@style/pos_line_h"/>

                <LinearLayout
                        android:id="@id/select_pay_detail_mode"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:id="@id/tv_second_type"
                            android:text="@string/pos_report_transaction_pay_mode"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/pay_second_mode"
                            style="@style/pos_report_filter_text_canclick_value"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/order_status_mode_l"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_marginTop="8.0dip"
                        style="@style/pos_line_h"/>

                <LinearLayout
                        android:id="@id/select_order_status_mode"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:id="@id/tv_order_status"
                            android:text="@string/pos_report_transaction_order_status_mode"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/order_status_mode"
                            style="@style/pos_report_filter_text_canclick_value"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_marginTop="8.0dip"
                        style="@style/pos_line_h"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/ll_cashier_type"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginRight="24.0dip">

                    <TextView
                            android:textSize="16.0dip"
                            android:textColor="#ff999999"
                            android:layout_width="64.0dip"
                            android:layout_height="22.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:text="@string/charge_or_consume"/>

                    <RadioGroup
                            android:orientation="horizontal"
                            android:id="@id/rg_cashier_type"
                            android:layout_width="fill_parent"
                            android:layout_height="48.0dip">

                        <RadioButton
                                android:id="@id/cashier_type_all"
                                android:checked="true"
                                android:text="@string/pos_report_transaction_user_all"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>

                        <RadioButton
                                android:id="@id/cashier_type_consumption"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:text="@string/consumption"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>

                        <RadioButton
                                android:id="@id/cashier_type_charge"
                                android:text="@string/charge"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/ll_client_type"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginRight="24.0dip">

                    <TextView
                            android:textSize="16.0dip"
                            android:textColor="#ff999999"
                            android:layout_width="64.0dip"
                            android:layout_height="22.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:text="@string/client_type"/>

                    <RadioGroup
                            android:orientation="horizontal"
                            android:id="@id/rg_client_type"
                            android:layout_width="fill_parent"
                            android:layout_height="48.0dip">

                        <RadioButton
                                android:id="@id/client_type_all"
                                android:checked="true"
                                android:text="@string/pos_report_transaction_user_all"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>

                        <RadioButton
                                android:id="@id/client_type_member"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:layout_marginRight="@dimen/dp_8"
                                android:text="@string/vip"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>

                        <RadioButton
                                android:id="@id/client_type_none_member"
                                android:text="@string/non_vip"
                                android:layout_weight="1.0"
                                style="@style/pos_report_filter_button"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                        android:id="@id/select_order_type"
                        android:background="@drawable/pos_simple_click_background"
                        android:visibility="gone"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:text="@string/report_order_type"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/order_type"
                            style="@style/pos_report_filter_text_canclick_brown"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@id/select_user"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:text="@string/pos_report_transaction_user"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/user"
                            style="@style/pos_report_filter_text_canclick_brown"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@id/select_product"
                        android:background="@drawable/pos_simple_click_background"
                        style="@style/pos_report_filter_group_canclick">

                    <TextView
                            android:text="@string/pos_report_transaction_product"
                            style="@style/pos_report_filter_text_noclick"/>

                    <TextView
                            android:id="@id/product"
                            style="@style/pos_report_filter_text_canclick_brown"/>

                    <View
                            android:layout_marginLeft="10.0dip"
                            style="@style/pos_report_filter_right_down_icon"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@id/clear"
                    android:visibility="gone"
                    android:layout_marginBottom="8.0dip"
                    style="@style/pos_report_filter_group_canclick">

                <TextView
                        android:layout_width="fill_parent"
                        android:text="@string/pos_report_transaction_clear"
                        style="@style/pos_report_filter_text_noclick"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>