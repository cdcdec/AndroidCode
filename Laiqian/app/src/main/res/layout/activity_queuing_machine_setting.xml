<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="@color/ui201404_smj_background_lightgray"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20.0dip">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@id/ll_queuing_machine_switch"
                android:background="@drawable/shape_rounded_rectangle_up_click"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:layout_width="614.0dip"
                android:layout_height="56.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip">

            <TextView
                    android:textSize="20.0dip"
                    android:textColor="@color/pos_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/queuing_function"
                    android:layout_weight="1.0"/>

            <View
                    android:id="@id/switch_queuing_machine"
                    android:background="@drawable/pos_check_switch"
                    android:layout_width="60.0dip"
                    android:layout_height="36.0dip"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@id/ll_voice_preview"
                android:background="@drawable/shape_rounded_rectangle_down_click"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:layout_width="614.0dip"
                android:layout_height="56.0dip"
                android:layout_marginLeft="24.0dip"
                android:layout_marginRight="24.0dip">

            <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                <TextView
                        android:textSize="20.0dip"
                        android:textColor="@color/pos_text_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sound_preview"/>

                <TextView
                        android:textSize="18.0dip"
                        android:textColor="@color/taste_text_color_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_box"/>
            </LinearLayout>

            <View
                    android:id="@id/voice_preview"
                    android:background="@drawable/voice_test_switch"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>