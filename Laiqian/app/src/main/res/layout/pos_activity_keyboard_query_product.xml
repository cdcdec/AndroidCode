<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_gravity="center_horizontal" android:background="@color/pos_line_grey" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow android:layout_weight="1.0">
        <TextView android:tag="@string/keycode_numpad_1" android:text="1" style="@style/pos_activity_keyboard_item" />
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_2" style="@style/keyboard_item">
            <TextView android:text="2" style="@style/keyboard_item_number" />
            <TextView android:text="ABC" style="@style/keyboard_item_letter" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_3" style="@style/keyboard_item">
            <TextView android:text="3" style="@style/keyboard_item_number" />
            <TextView android:text="DEF" style="@style/keyboard_item_letter" />
        </LinearLayout>
    </TableRow>
    <TableRow android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_4" style="@style/keyboard_item">
            <TextView android:text="4" style="@style/keyboard_item_number" />
            <TextView android:text="GHI" style="@style/keyboard_item_letter" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_5" style="@style/keyboard_item">
            <TextView android:text="5" style="@style/keyboard_item_number" />
            <TextView android:text="JKL" style="@style/keyboard_item_letter" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_6" style="@style/keyboard_item">
            <TextView android:text="6" style="@style/keyboard_item_number" />
            <TextView android:text="MNO" style="@style/keyboard_item_letter" />
        </LinearLayout>
    </TableRow>
    <TableRow android:layout_weight="1.0">
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_7" style="@style/keyboard_item">
            <TextView android:text="7" style="@style/keyboard_item_number" />
            <TextView android:text="PQRS" style="@style/keyboard_item_letter" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_8" style="@style/keyboard_item">
            <TextView android:text="8" style="@style/keyboard_item_number" />
            <TextView android:text="TUV" style="@style/keyboard_item_letter" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:tag="@string/keycode_numpad_9" style="@style/keyboard_item">
            <TextView android:text="9" style="@style/keyboard_item_number" />
            <TextView android:text="WXYZ" style="@style/keyboard_item_letter" />
        </LinearLayout>
    </TableRow>
    <TableRow android:layout_weight="1.0">
        <TextView android:tag="@string/keycode_numpad_0" android:layout_marginBottom="0.0dip" android:text="0" style="@style/pos_activity_keyboard_item" />
        <TextView android:tag="@string/keycode_del" android:layout_marginBottom="0.0dip" android:text="@string/pos_add_member_number_back_title" android:layout_weight="2.0" style="@style/pos_activity_keyboard_item" />
    </TableRow>
</TableLayout>