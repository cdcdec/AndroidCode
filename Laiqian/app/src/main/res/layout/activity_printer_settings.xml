<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@color/pos_big_b_color_10800"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:textSize="20.0dip"
                android:textColor="@color/setting_text_color2"
                android:gravity="center|left"
                android:id="@id/tv_upper"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:text="@string/add_printers"/>

        <TableLayout
                android:id="@id/table_uppper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_below="@id/tv_upper"/>

        <View
                android:id="@id/center_line"
                android:visibility="invisible"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_centerVertical="true"/>

        <TextView
                android:textSize="20.0dip"
                android:textColor="@color/setting_text_color2"
                android:gravity="center|left"
                android:id="@id/tv_lower"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="24.0dip"
                android:text="@string/current_printers"/>

        <TableLayout
                android:id="@id/table_lower"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_below="@id/tv_lower"/>
    </LinearLayout>
</ScrollView>