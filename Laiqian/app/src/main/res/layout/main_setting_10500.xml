<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/setting_bg_color"
              style="@style/grey_background">

    <RelativeLayout
            android:background="@color/setting_title_bg_color"
            android:layout_width="fill_parent"
            android:layout_height="56.0dip">

        <LinearLayout
                android:id="@id/ui_titlebar_back_btn"
                style="@style/pos_title_back">

            <View style="@style/pos_title_back_icon"/>

            <TextView
                    android:id="@id/ui_titlebar_txt"
                    android:text="@string/main_setting_title"
                    style="@style/pos_title_text"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center|right"
                android:layout_width="500.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:layout_alignParentRight="true">

            <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@id/llUserName"
                    android:background="@drawable/titlebar_leftbt_selector_10500"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="24.0dip"
                        android:layout_marginRight="14.0dip"
                        android:src="@drawable/pos_um_not_on_line"/>

                <TextView
                        android:textSize="21.0dip"
                        android:textColor="@color/setting_text_color1"
                        android:ellipsize="end"
                        android:id="@id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24.0dip"
                        android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
            android:background="@color/setting_line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_alignParentBottom="true"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <ScrollView
                android:scrollbarStyle="outsideOverlay"
                android:id="@id/leftScrollView"
                android:layout_width="250.0dip"
                android:layout_height="fill_parent"
                style="@style/main_setting_scrollview_style">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@id/svMainSettingMenu"
                    android:paddingTop="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:layout_width="250.0dip"
                    android:layout_height="wrap_content"/>
        </ScrollView>

        <View
                android:background="@color/setting_line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <ScrollView
                    android:id="@id/svMainSettingParent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true"
                    style="@style/main_setting_scrollview_style">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <FrameLayout
                            android:id="@id/flMainSetting"
                            android:paddingTop="8.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:id="@id/svMainSetting"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>

                    <FrameLayout
                            android:id="@id/flMainSettingBottom"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>