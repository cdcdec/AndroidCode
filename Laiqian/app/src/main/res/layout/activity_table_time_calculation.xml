<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/pos_big_b_color_10800"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@id/switch_time_calculation"
            android:background="@drawable/shape_rounded_rectangle_only_click"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip"
            android:layout_width="614.0dip"
            android:layout_height="56.0dip"
            android:layout_marginTop="20.0dip">

        <TextView
                android:textSize="20.0dip"
                android:textColor="@color/pos_text_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/table_time_calculation"
                android:layout_weight="1.0"/>

        <View
                android:id="@id/switch_time_calculation_icon"
                android:background="@drawable/pos_check_switch"
                android:layout_width="60.0dip"
                android:layout_height="36.0dip"/>
    </LinearLayout>

    <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@id/ll_table_time_rule"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="614.0dip"
                android:layout_height="56.0dip"
                android:text="@string/table_time_calculation_rule"/>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@id/ll_table_time_calculation_rule_first"
                android:background="@drawable/shape_rounded_rectangle_up_click"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:layout_width="614.0dip"
                android:layout_height="56.0dip"
                android:layout_marginTop="-1.0dip">

            <TextView
                    android:textSize="20.0dip"
                    android:textColor="@color/selector_table_time_rule_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/table_time_calculation_rule_first"
                    android:layout_weight="1.0"/>

            <View
                    android:id="@id/table_time_rule_icon_first"
                    android:background="@drawable/pos_select_icon"
                    android:duplicateParentState="true"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>
        </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@id/ll_table_time_calculation_rule_second"
                android:background="@drawable/shape_rounded_rectangle_down_click"
                android:paddingLeft="24.0dip"
                android:paddingRight="24.0dip"
                android:layout_width="614.0dip"
                android:layout_height="56.0dip"
                android:layout_marginTop="-1.0dip">

            <TextView
                    android:textSize="20.0dip"
                    android:textColor="@color/selector_table_time_rule_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/table_time_calculation_rule_second"
                    android:layout_weight="1.0"/>

            <View
                    android:id="@id/table_time_rule_icon_second"
                    android:background="@drawable/pos_select_icon"
                    android:duplicateParentState="true"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>