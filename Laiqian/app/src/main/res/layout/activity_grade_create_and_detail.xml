<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:background="@color/ui201404_smj_background_lightgray"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="never">

    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="614.0dip"
            android:layout_height="fill_parent">

        <TextView
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:text="@string/pos_add_member_level_detail"/>

        <com.laiqian.ui.container.LayoutLeftTextRightEditText
                android:id="@id/member_level"
                android:background="@drawable/shape_rounded_rectangle_up_click"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                app:left_text="@string/pos_add_member_level"/>

        <com.laiqian.ui.container.LayoutLeftTextRightEditText
                android:id="@id/member_level_name"
                android:background="@drawable/shape_rounded_rectangle_unupdown_click"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:layout_marginTop="-1.0dip"
                app:left_text="@string/pos_add_member_level_name"/>

        <com.laiqian.ui.container.LayoutLeftTextRightEditTextWithUnit
                android:id="@id/member_level_discount"
                android:background="@drawable/shape_rounded_rectangle_down_click"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:layout_marginTop="-1.0dip"
                app:left_text="@string/pos_add_member_level_discount"
                app:unit_text="%"/>

        <com.laiqian.ui.container.LayoutLeftTextRightEditText
                android:id="@id/member_level_point"
                android:background="@drawable/shape_rounded_rectangle_down_click"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:layout_marginTop="-1.0dip"
                app:left_text="@string/pos_add_member_level_point"/>

        <LinearLayout
                android:orientation="vertical"
                android:id="@id/ll_upgrade_rule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:text="@string/pos_add_member_level_upgrade_rule"/>

            <com.laiqian.ui.container.LayoutLeftTextRightTextWithDialog
                    android:id="@id/member_level_upgrade_rule"
                    android:background="@drawable/shape_rounded_rectangle_up_click"
                    android:paddingLeft="32.0dip"
                    android:paddingRight="18.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:layout_marginTop="-1.0dip"
                    app:left_text="@string/pos_add_member_level_upgrade_rule"/>

            <com.laiqian.ui.container.LayoutLeftTextRightEditTextWithUnit
                    android:id="@id/member_level_upgrade_rule_threshold"
                    android:background="@drawable/shape_rounded_rectangle_down_click"
                    android:layout_width="fill_parent"
                    android:layout_height="56.0dip"
                    android:layout_marginTop="-1.0dip"
                    app:left_text="@string/pos_add_member_level_upgrade_rule_threshold"
                    app:unit_text="@string/member_total_amount_unit"/>
        </LinearLayout>

        <Button
                android:id="@id/member_grade_delete"
                android:background="@drawable/shape_rounded_rectangle_only_click"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:layout_marginTop="40.0dip"
                android:layout_marginBottom="20.0dip"
                android:text="@string/ol_deleteItem"
                style="@style/print_item_layout_label"/>
    </LinearLayout>
</ScrollView>