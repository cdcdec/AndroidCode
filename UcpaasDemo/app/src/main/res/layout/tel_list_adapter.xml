<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tel_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/iv_tel_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/person"
        android:clickable="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/tv_tel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dip"
        android:paddingBottom="15dip"
        android:textSize="12sp"
        android:textColor="@color/item_content_color"
        android:text="11-30 17:38" />

    <TextView
        android:id="@+id/tv_tel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_tel_head"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_tel_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@id/tv_tel_time"
        android:text="昵称"
        android:textColor="@color/tv_tel_name"
        android:textSize="@dimen/itme_name_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_tel_name"
        android:layout_below="@id/tv_tel_name"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_tel_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/out_call" />

        <TextView
            android:id="@+id/tv_tel_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:text="视频聊天"
            android:textColor="@color/tv_msg_mode"
            android:textSize="@dimen/item_content_size" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_tel_head"
        android:layout_marginLeft="66dip"
        android:layout_marginTop="5dip"
        android:background="#dedfe0" />

</RelativeLayout>