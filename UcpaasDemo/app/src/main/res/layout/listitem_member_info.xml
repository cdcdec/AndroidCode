<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
    	android:layout_height="10dip"/>
    <RelativeLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
	    <ImageView 
	        android:id="@+id/member_info_iv"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"/>
	    <ImageView 
	        android:id="@+id/member_info_delete"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentTop="true"
	    	android:layout_alignRight="@id/member_info_iv"
	    	android:layout_alignTop="@id/member_info_iv"
	    	android:background="@drawable/delete_one_member"
	    	android:visibility="gone"/>
    </RelativeLayout>
    <TextView 
        android:id="@+id/member_info_tv"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
    	android:layout_height="wrap_content"/>
	<View 
        android:layout_width="match_parent"
    	android:layout_height="10dip"/>
</LinearLayout>
