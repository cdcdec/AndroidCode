<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/info_show_normal"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/id_text_msgnotify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/setting_msgNotigy"
            android:textColor="@color/item_name_color"
            android:drawableLeft="@drawable/setting_msg_notify"
            android:drawablePadding="10dp"
            android:background="@drawable/item_press_selector"
            android:textSize="@dimen/itme_name_size" />

        <CheckBox
            android:id="@+id/id_checkbox_msgnotify"
            style="@style/defineCheckBox"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <View
        android:id="@+id/id_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@color/item_gray_color" />

    <RelativeLayout
        android:id="@+id/setting_layout_voice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/info_show_normal"
        >

        <TextView
            android:id="@+id/id_text_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/setting_voice"
            android:textColor="@color/item_name_color"
            android:drawableLeft="@drawable/setting_voice"
            android:drawablePadding="10dp"
            android:background="@drawable/item_press_selector"
            android:textSize="@dimen/itme_name_size" />

        <CheckBox
            android:id="@+id/id_checkbox_voice"
            style="@style/defineCheckBox"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />
    </RelativeLayout>
 	<View
        android:id="@+id/id_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@color/item_gray_color"  />
    <RelativeLayout
        android:id="@+id/setting_layout_vibrator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/info_show_normal"
        >
        <TextView
            android:id="@+id/id_text_vibrator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/setting_vibrator"
            android:textColor="@color/item_name_color"
            android:drawableLeft="@drawable/setting_vibor"
            android:drawablePadding="10dp"
            android:background="@drawable/item_press_selector"
            android:textSize="@dimen/itme_name_size" />

        <CheckBox
            android:id="@+id/id_checkbox_vibrator"
            style="@style/defineCheckBox"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />
    </RelativeLayout>
</LinearLayout>