<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:yzx="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    
	<com.yzx.mydefineview.MessagePopView
	    android:id="@+id/msg_pop"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    yzx:textSize="14sp"
	    yzx:normalColor="#222222"
	    yzx:operateStyle="copyAnddelete"
	    yzx:textColor="#F7F7F7"
	    yzx:focusColor="#444444"
	    yzx:trangleH="8dp"
	    yzx:paddingL="10dp"
	    yzx:devideWidth="1dp"
	    yzx:devideColor="#4E4E4E"
	    android:layout_centerInParent="true"
	    />
</RelativeLayout>
