<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:orientation="vertical" >
		
	    <com.yzx.mydefineview.YzxTopBar
		    android:id="@+id/yzx_topbar"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentTop="true"
	        android:background="#1D1D1D" />
	    
		<com.yzx.mydefineview.MyGridView
		    android:id="@+id/info_list_gv"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#ffffff"
		    android:listSelector="@android:color/transparent"
		    android:layout_gravity="center"
		    android:clickable="false"
		    android:numColumns="4"
		    android:scrollbars="none"
		    android:scrollingCache="false"
		    android:stretchMode="columnWidth" />
	
		<View 
		    android:layout_width="match_parent"
			android:layout_height="15dip"
			android:background="@color/item_gray_color"/>
		
		<TextView
		    android:id="@+id/selectbg_tv"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
			android:clickable="false"
			android:text="更换聊天背景"
			android:textSize="16sp"
			android:textColor="@color/item_name_color"
			android:background="@drawable/info_show"
			android:gravity="center_vertical" />
		<View 
		    android:layout_width="match_parent"
			android:layout_height="15dip"
			android:background="@color/item_gray_color"/>
		<RelativeLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="20dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
		    android:background="#ffffff"
		    android:visibility="gone"
		    android:orientation="horizontal" >
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="false"
				android:text="接收消息"
				android:textSize="16sp"
				android:textColor="@color/item_name_color"
				android:background="@drawable/info_show"
				android:gravity="center_vertical" /> 
			<CheckBox 
			    android:id="@+id/item_check_receive"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:button="@drawable/setting_checkbox_selector"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="20dip"
			    android:gravity="center"
			    android:layout_centerInParent="true"
			    android:tag="true" />
		</RelativeLayout>
		<View 
		    android:layout_width="match_parent"
			android:layout_height="15dip"
			android:visibility="gone"
			android:background="@color/item_gray_color"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="20dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
			android:clickable="false"
			android:text="查找聊天记录"
			android:textSize="16sp"
			android:textColor="#F1F1F1"
			android:visibility="gone"
			android:gravity="center_vertical" /> 
		<View 
		    android:layout_width="match_parent"
			android:layout_height="1dip"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip"
			android:visibility="gone"
			android:background="#ececec"/>
		<TextView
		    android:id="@+id/clear_msgs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="20dip"
			android:paddingTop="20dip"
			android:paddingBottom="20dip"
			android:clickable="false"
			android:text="清空聊天记录"
			android:textSize="16sp"
			android:textColor="@color/item_name_color"
			android:gravity="center_vertical" /> 
			<View 
		    android:layout_width="match_parent"
			android:layout_height="15dip"
			android:background="@color/item_gray_color"/>
	</LinearLayout>
</ScrollView>