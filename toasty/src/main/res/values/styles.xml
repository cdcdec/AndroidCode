<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DemoButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#646f7c</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AllStyles">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#00FFFF</item>
        <item name="stColorBackground">#000</item>
        <item name="stRadius">12dp</item>
        <item name="stFont">@font/dosis</item>
        <item name="stTextSize">18sp</item>
        <item name="stTextColor">#ff0</item>
        <item name="stTextBold">true</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_autorenew_black_24dp</item>
        <item name="stIconEnd">@drawable/ic_autorenew_black_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity"></item> top or center
    </style>


    <style name="BaseStyleableToast">
        <item name="stLength">SHORT</item>
    </style>

    <style name="ColoredStroke" parent="BaseStyleableToast">
        <item name="stStrokeWidth">2dp</item>
        <item name="stStrokeColor">#ff00</item>
    </style>

    <style name="ColoredBackground" parent="BaseStyleableToast">
        <item name="stColorBackground">#FF5A5F</item>
    </style>

    <style name="ColoredText" parent="BaseStyleableToast">
        <item name="stTextColor">#FF5A5F</item>
    </style>

    <style name="ColoredBoldText" parent="BaseStyleableToast">
        <item name="stTextColor">#FF5A5F</item>
        <item name="stTextBold">true</item>
    </style>

    <style name="CustomFont" parent="BaseStyleableToast">
        <item name="stFont">@font/dosis</item>
    </style>

    <style name="CornerRadius5Dp" parent="BaseStyleableToast">
        <item name="stRadius">5dp</item>
    </style>

    <style name="IconStart" parent="BaseStyleableToast">
        <item name="stIconStart">@drawable/ic_autorenew_black_24dp</item>
    </style>

    <style name="IconEnd" parent="BaseStyleableToast">
        <item name="stIconEnd">@drawable/ic_autorenew_black_24dp</item>
    </style>

    <style name="IconStartEnd" parent="BaseStyleableToast">
        <item name="stIconStart">@drawable/ic_autorenew_black_24dp</item>
        <item name="stIconEnd">@drawable/ic_autorenew_black_24dp</item>
    </style>


    <style name="defaultStyle" />


</resources>
