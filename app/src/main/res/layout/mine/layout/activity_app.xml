<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".mine.AppActivity"
>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:divider="@drawable/shape_line1"
            app:showDividers="middle|end"
            app:dividerPadding="10dp">
        <TextView
                android:id="@+id/tvAppName"
                style="@style/comTvStyle1"
                android:text="@string/appName"
        />
        <TextView
                android:id="@+id/tvPkgName"
                style="@style/comTvStyle1"
                android:text="@string/pkgName"
        />
        <TextView
                android:id="@+id/tvAppPath"
                style="@style/comTvStyle1"
                android:text="@string/appPath"
        />
        <TextView
                android:id="@+id/tvAppVersionName"
                style="@style/comTvStyle1"
                android:text="@string/appVersionName"
        />
        <TextView
                android:id="@+id/tvAppVersionCode"
                style="@style/comTvStyle1"
                android:text="@string/appVersionCode"
        />
        <TextView
                android:id="@+id/tvAppSHA1"
                style="@style/comTvStyle1"
                android:text="@string/appSHA1"
        />
        <TextView
                android:id="@+id/tvAppSHA256"
                style="@style/comTvStyle1"
                android:text="@string/appSHA256"
        />
        <TextView
                android:id="@+id/tvAppMD5"
                style="@style/comTvStyle1"
                android:text="@string/appMD5"
        />
        <TextView
                android:id="@+id/tvIsAppDebug"
                style="@style/comTvStyle1"
                android:text="@string/isAppDebug"
        />
        <TextView
                android:id="@+id/tvIsAppSystem"
                style="@style/comTvStyle1"
                android:text="@string/isAppSystem"
        />
        <Button
                android:id="@+id/btnRelaunchApp"
                style="@style/comBtnStyle1"
                android:text="@string/relaunchApp"
        />
        <Button
                android:id="@+id/btnLaunchAppDetailsSettings"
                style="@style/comBtnStyle1"
                android:text="@string/launchAppDetailsSettings"
        />
        <Button
                android:id="@+id/btnExitApp"
                style="@style/comBtnStyle1"
                android:text="@string/exitApp"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>





