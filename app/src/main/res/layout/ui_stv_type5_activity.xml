<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.supertextview.UiStvTypeActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarType5"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:elevation="4dp"
            stv:navigationIcon="@mipmap/icon_back_left_arrow"
            android:background="@color/colorPrimary"
    >
        <!--自定义控件-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Super TextView"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">
        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextString="188****8888"
                stv:sLeftIconRes="@mipmap/head_default"
                stv:sLeftTopTextString="张三"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="已实名" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextString="188****8888"
                stv:sLeftIconRes="@mipmap/head_default"
                stv:sLeftTopTextString="张三" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="迪丽热巴"
                stv:sLeftViewGravity="left_center"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTvDrawableRight="@mipmap/head_default" />


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sCenterTextString="下边展示使用网络图片的情况" />

        <com.allen.library.SuperTextView
                android:id="@+id/super_tv1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextString="188****8888"
                stv:sLeftIconRes="@mipmap/head_default"
                stv:sLeftIconShowCircle="true"
                stv:sLeftTopTextString="张三"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="已实名" />

        <com.allen.library.SuperTextView
                android:id="@+id/super_tv2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sRightBottomTextString="188****8888"
                stv:sRightIconHeight="60dp"
                stv:sRightIconRes="@mipmap/head_default"
                stv:sRightIconShowCircle="true"
                stv:sRightIconWidth="60dp"
                stv:sRightTopTextString="张三"
                stv:sRightViewGravity="right_center" />

        <com.allen.library.SuperTextView
                android:id="@+id/super_tv3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftMaxEms="30"
                stv:sLeftTextString="自定义sRightTvDrawableRight的宽高"
                stv:sLeftViewGravity="left_center"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTvDrawableHeight="40dp"
                stv:sRightTvDrawableRight="@mipmap/head_default"
                stv:sRightTvDrawableWidth="40dp" />

        <com.allen.library.SuperTextView
                android:id="@+id/alipay_stv_5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextColor="@color/gray_btn"
                stv:sLeftBottomTextSize="15sp"
                stv:sLeftBottomTextString="数亿用户都在用，安全可托付"
                stv:sLeftIconRes="@mipmap/alipay_icon"
                stv:sLeftTextColor="@android:color/black"
                stv:sLeftTextSize="20sp"
                stv:sLeftTextString="支付宝"
                stv:sLeftTvDrawableHeight="15dp"
                stv:sLeftTvDrawableRight="@mipmap/original_label"
                stv:sLeftTvDrawableWidth="30dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightIconRes="@mipmap/success_blue13" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterTextString="支付宝"
                stv:sCenterTvDrawableHeight="20dp"
                stv:sCenterTvDrawableLeft="@mipmap/uy"
                stv:sCenterTvDrawableRight="@mipmap/uy"
                stv:sCenterTvDrawableWidth="20dp"
                stv:sLeftTextString="支付宝"
                stv:sLeftTvDrawableHeight="10dp"
                stv:sLeftTvDrawableLeft="@mipmap/uy"
                stv:sLeftTvDrawableRight="@mipmap/uy"
                stv:sLeftTvDrawableWidth="10dp"
                stv:sRightTextString="支付宝"
                stv:sRightTvDrawableHeight="30dp"
                stv:sRightTvDrawableLeft="@mipmap/uy"
                stv:sRightTvDrawableRight="@mipmap/uy"
                stv:sRightTvDrawableWidth="30dp"
                stv:sTextViewDrawablePadding="3dp" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>