<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.supertextview.UiStvTypeActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarType3"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:elevation="4dp"
            stv:navigationIcon="@mipmap/icon_back_left_arrow"
            android:background="@color/colorPrimary"
    >
        <!--自定义控件-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Super TextView"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">
        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:sLeftTextString="起息时间"
                stv:sLeftIconRes="@mipmap/scatter_time"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="立即起息" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="还款方式"
                stv:sLeftIconRes="@mipmap/scatter_type"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="等额本息" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="投标截止"
                stv:sLeftIconRes="@mipmap/scatter_use"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="2016-10-19  08:00" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="提前还款费率"
                stv:sLeftIconRes="@mipmap/scatter_money"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="80%" />



    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>