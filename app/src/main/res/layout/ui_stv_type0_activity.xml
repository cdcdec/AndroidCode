<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.supertextview.UiStvTypeActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarType0"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:elevation="4dp"
            stv:navigationIcon="@mipmap/icon_back_left_arrow"
            android:background="@color/colorPrimary"
    >
        <!--自定义控件-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Super TextView"/>
    </androidx.appcompat.widget.Toolbar>
<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterBottomTextColor="@color/colorAccent"
                stv:sCenterBottomTextString="限额说明>>"
                stv:sCenterTopTextString=" "
                stv:sCenterViewGravity="left_center"
                stv:sLeftBottomTextString="招商银行（8888）"
                stv:sLeftIconRes="@mipmap/bank_zhao_shang"
                stv:sLeftTopTextString="银行卡支付"
                stv:sLeftViewGravity="left_center"
                stv:sRightCheckBoxRes="@drawable/circular_check_bg"
                stv:sRightViewType="checkbox"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextColor="@color/colorAccent"
                stv:sLeftBottomTextString="限额说明>>"
                stv:sLeftIconRes="@mipmap/not_bank_card_icon"
                stv:sLeftTopTextString="银行卡支付"
                stv:sLeftViewGravity="left_center"
                stv:sRightCheckBoxRes="@drawable/circular_check_bg"/>

        <com.allen.library.SuperTextView
                android:id="@+id/alipay_stv"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextColor="@color/gray_btn"
                stv:sLeftBottomTextSize="15sp"
                stv:sLeftBottomTextString="数亿用户都在用，安全可托付"
                stv:sLeftIconRes="@mipmap/alipay_icon"
                stv:sLeftTextColor="@android:color/black"
                stv:sLeftTextSize="20sp"
                stv:sLeftTextString="支付宝"
                stv:sLeftTvDrawableHeight="15dp"
                stv:sLeftTvDrawableRight="@mipmap/original_label"
                stv:sLeftTvDrawableWidth="30dp"
                stv:sLeftViewGravity="left_center"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftIconHeight="50dp"
                stv:sLeftIconRes="@mipmap/name_icon"
                stv:sLeftIconShowCircle="true"
                stv:sLeftIconWidth="50dp"
                stv:sLeftTextString="支持圆形图片"
                stv:sLeftViewGravity="left_center"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterBottomTextColor="#979b9e"
                stv:sCenterBottomTextString="关注"
                stv:sCenterSpaceHeight="10dp"
                stv:sCenterTopTextString="666666"
                stv:sLeftBottomTextColor="#979b9e"
                stv:sLeftBottomTextString="点赞"
                stv:sLeftTopTextString="100000"
                stv:sLeftViewMarginLeft="30dp"
                stv:sRightBottomTextColor="#979b9e"
                stv:sRightBottomTextString="粉丝"
                stv:sRightTopTextString="888888"
                stv:sRightViewMarginRight="30dp"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="迪丽热巴"
                stv:sLeftViewGravity="left_center"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTvDrawableRight="@mipmap/head_default"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="推送通知"
                stv:sLeftViewGravity="left_center"
                stv:sRightViewType="switchBtn"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="声音"
                stv:sRightViewType="switchBtn"
                stv:sSwitchIsChecked="true"
                stv:sSwitchMinWidth="40dp"
                stv:sThumbResource="@drawable/thumb"
                stv:sTrackResource="@drawable/track"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sCenterTextColor="@color/white"
                stv:sCenterTvDrawableLeft="@mipmap/red_circle"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@mipmap/uv"
                stv:sLeftTextString="钱包"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="特别关心"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTextBackground="@drawable/shape_cycle_rectangle"
                stv:sRightTextColor="@color/white"
                stv:sRightTextSize="10sp"
                stv:sRightTextString="NEW"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="微信"
                stv:sRightTextBackground="@drawable/shape_cycle_rectangle_download"
                stv:sRightTextColor="@color/colorPrimary"
                stv:sRightTextSize="10sp"
                stv:sRightTextString="下载"/>


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconRes="@mipmap/question"
                stv:sLeftTextString="常见问题"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconRes="@mipmap/my_bankcard"
                stv:sLeftTextString="我的银行卡"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="已绑定"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="设置中心"
                stv:sRightIconRes="@mipmap/arrow_right_red"/>


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
                stv:sLeftTextString="客服热线"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTextColor="#ff0000"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="4006179999"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="账号与安全"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTextString="已保护"
                stv:sRightTvDrawableLeft="@mipmap/v1"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sCenterTextString="88.88元"
                stv:sLeftTextString="2016-10-18"
                stv:sRightTextString="正常"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="年化率"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="13.8%"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconHeight="25dp"
                stv:sLeftIconRes="@mipmap/ic_hint_music"
                stv:sLeftIconWidth="25dp"
                stv:sLeftTextString="自定义图片大小"
                stv:sRightTextString="宽高20dp"/>


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sBackgroundDrawableRes="@drawable/selector_red"
                stv:sLeftTextString="自定义背景点击效果"
                stv:sRightIconRes="@mipmap/arrow_right_red"/>

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                stv:sLeftTextColor="@color/selector_stv_text_color"
                stv:sLeftTextString="账号与安全"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTextString="已保护"
                stv:sRightTvDrawableLeft="@mipmap/v1"
                stv:sShapeCornersRadius="5dp"
                stv:sShapeSelectorPressedColor="@color/gray"
                stv:sShapeStrokeColor="@color/colorAccent"
                stv:sShapeStrokeWidth="0.3dp"
                stv:sUseShape="true"/>

        <com.allen.library.SuperTextView
                android:id="@+id/setDiv_stv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                stv:sDividerLineType="both"
                stv:sLeftTextString="代码动态设置上下分割线的颜色"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>