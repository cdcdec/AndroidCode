<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.supertextview.UiStvTypeActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarType1"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:elevation="4dp"
            stv:navigationIcon="@mipmap/icon_back_left_arrow"
            android:background="@color/colorPrimary"
    >
        <!--自定义控件-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Super TextView"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">
        <com.allen.library.SuperTextView
                stv:sDividerLineType="both"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftIconRes="@mipmap/head_default"
                stv:sLeftTextString="帐号管理"
                stv:sRightIconRes="@mipmap/arrow_right_red" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="通知设置"
                stv:sRightIconRes="@mipmap/arrow_right_red" />
        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                stv:sLeftTextString="账号与安全"
                stv:sRightTextString="已保护"
                stv:sRightIconRes="@mipmap/arrow_right_red"
                stv:sRightTvDrawableLeft="@mipmap/v1"
                android:layout_height="50dp" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sDividerLineType="bottom"
                stv:sLeftTextString="设置中心"
                stv:sRightIconRes="@mipmap/arrow_right_red" />


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                stv:sDividerLineType="both"
                stv:sLeftTextString="意见反馈"
                stv:sRightIconRes="@mipmap/arrow_right_red" />

        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:sDividerLineType="both"
                stv:sLeftTextString="关于微博"
                stv:sRightIconRes="@mipmap/arrow_right_red" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>