<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        tools:context=".ui.supertextview.UiStvTypeActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarType7"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:elevation="4dp"
            stv:navigationIcon="@mipmap/icon_back_left_arrow"
            android:background="@color/colorPrimary"
    >
        <!--自定义控件-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="Super TextView"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp">
        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="系统默认"
                stv:sRightViewType="switchBtn" />


        <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="自己添加资源"
                stv:sRightViewType="switchBtn"
                stv:sSwitchIsChecked="true"
                stv:sSwitchMinWidth="50dp"
                stv:sThumbResource="@drawable/thumb"
                stv:sTrackResource="@drawable/track" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>