<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleToolbar">
        <attr name="titleVisible" format="boolean" />
        <attr name="titleTextSize" format="dimension" />

        <attr name="subtitleVisible" format="boolean" />
        <attr name="subtitleTextSize" format="dimension" />

        <attr name="title_gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="closeVisible" format="boolean" />
        <attr name="closeText" format="string" />
        <attr name="closeTextAppearance" format="reference" />
        <attr name="closeTextColor" format="color" />
        <attr name="closeTextSize" format="dimension" />

        <attr name="backVisible" format="boolean" />
        <attr name="backText" format="string" />
        <attr name="backTextAppearance" format="reference" />
        <attr name="backTextColor" format="color" />
        <attr name="backTextSize" format="dimension" />
        <attr name="backIcon" format="reference" />
        <attr name="backMarginRight" format="dimension" />

        <attr name="icon1Visible" format="boolean" />
        <attr name="icon1" format="reference" />
        <attr name="icon1MarginRight" format="dimension" />


        <attr name="icon2Visible" format="boolean" />
        <attr name="icon2" format="reference" />
        <attr name="icon2MarginRight" format="dimension" />

    </declare-styleable>

    <declare-styleable name="StyleableToast">
        <attr name="stTextBold" format="boolean" />
        <attr name="stTextColor" format="color" />
        <attr name="stFont" format="reference" />
        <attr name="stTextSize" format="dimension" />
        <attr name="stColorBackground" format="color" />
        <attr name="stSolidBackground" format="boolean" />
        <attr name="stRadius" format="dimension" />
        <attr name="stStrokeWidth" format="dimension" />
        <attr name="stStrokeColor" format="color" />
        <attr name="stIconStart" format="reference" />
        <attr name="stIconEnd" format="reference" />
        <attr name="stLength" format="integer">
            <enum name="LONG" value="1" />
            <enum name="SHORT" value="0" />
        </attr>
        <attr name="stGravity" format="integer">
            <enum name="center" value="1" />
            <enum name="top" value="2" />
        </attr>

    </declare-styleable>
</resources>
