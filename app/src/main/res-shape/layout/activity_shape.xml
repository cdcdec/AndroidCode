<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.shape.ShapeActivity"
        app:divider="@drawable/shape_line1"
        app:showDividers="beginning|middle|end"
        android:gravity="center_horizontal">
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="直角矩形"
            android:background="@drawable/btn_selector"
            android:textColor="@drawable/btn_txt_selector"/>

    <Button
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="圆角矩形"
            android:background="@drawable/shape_rectangle1"/>

    <Button
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无填充带边框"
            android:background="@drawable/shape_rectangle2"/>

    <Button
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="渐变"
            android:background="@drawable/shape_rectangle3"/>

    <!--layerType设置为software,否则看不到虚线-->
    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layerType="software"
            android:background="@drawable/shape_line"></LinearLayout>

    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_line1"></LinearLayout>

    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_oval1"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_oval"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_ring"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_ring1"
                android:layout_marginLeft="16dp"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
