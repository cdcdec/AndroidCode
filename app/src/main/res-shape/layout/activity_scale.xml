<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context=".ui.shape.ScaleActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="normal"
            android:textSize="16sp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_oval"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_margin="12dp"
          android:background="@android:color/darker_gray"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="scaleGravity:top"
            android:textSize="16sp"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <ImageView
                android:id="@+id/image30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scale_top_30"
                android:layout_gravity="center"/>

        <ImageView
                android:id="@+id/image50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scale_top_50"
                android:layout_gravity="center"/>
        <ImageView
                android:id="@+id/image80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/scale_top_80"
                android:layout_gravity="center"/>
    </FrameLayout>

</LinearLayout>